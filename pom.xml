<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>no.uis.nio</groupId>
  <artifactId>nio-fs</artifactId>
  <version>1.0.3-SNAPSHOT</version>
  <name>nio-fs</name>
  <description>Java7 FileSystemProviders</description>
  <packaging>pom</packaging>
  <modules>
    <module>sftp</module>
    <module>webdav</module>
    <module>commons</module>
    <module>smb</module>
    <module>commons-test</module>
    <module>util</module>
  </modules>

  <build>
    <extensions>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-webdav-jackrabbit</artifactId>
        <version>2.2</version>
      </extension>
    </extensions>
    
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-site-plugin</artifactId>
          <version>3.1</version>
          <executions>
            <execution>
              <id>attach-descriptor</id>
              <goals>
                <goal>attach-descriptor</goal>
              </goals>
            </execution>          
          </executions>
        </plugin>
		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-shade-plugin</artifactId>
			<version>2.0</version>
		</plugin>
      </plugins>
    </pluginManagement>
    
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <target>1.7</target>
          <source>1.7</source>
        </configuration>
      </plugin>
      <plugin>
      	<artifactId>maven-eclipse-plugin</artifactId>
      	<version>2.9</version>
      	<configuration>
      	  <projectNameTemplate>[groupId]-[artifactId]</projectNameTemplate>
      	</configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>uis</id>
      <distributionManagement>
        <repository>
          <id>internal</id>
          <url>https://source01.uis.no/archiva/repository/internal/</url>
        </repository>
        <snapshotRepository>
          <id>snapshots</id>
          <url>https://source01.uis.no/archiva/repository/snapshots/</url>
        </snapshotRepository>
        <site>
          <id>source01.uis.no</id>
          <url>dav:https://source01.uis.no/maven-site/${project.groupId}/${project.artifactId}/${project.version}</url>
        </site>
      </distributionManagement>
    </profile>
  </profiles>
  <scm>
    <url>http://forge.uis.no/projects/nio-fs-provider/repository</url>
    <connection>scm:git:git://forge.uis.no/nio-fs-provider.git</connection>
    <developerConnection>scm:git:ssh://git@forge.uis.no/nio-fs-provider.git</developerConnection>
  </scm>
  <url>http://forge.uis.no/projects/nio-fs-provider</url>
  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
    </license>
  </licenses>
</project>